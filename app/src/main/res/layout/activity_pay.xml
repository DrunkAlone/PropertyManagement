<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@drawable/layer"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorAccent">
        <TextView
            android:id="@+id/info_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#F7F7F7"
            android:textStyle="bold"
            android:text="生活缴费"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp">
        <TextView
            android:id="@+id/pay_tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴费类型："
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请选择类型"
            android:textSize="15sp"
            android:layout_marginRight="10dp"/>
        <Button
            android:id="@+id/pay_type_choose"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="选择"
            android:textSize="12sp"
            android:textColor="@color/base_F5F5F5"
            android:background="@drawable/loginbutton"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp">
        <TextView
            android:id="@+id/pay_tv_deposit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="资金余额："
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/pay_deposit_choose"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="查询余额"
            android:textSize="12sp"
            android:textColor="@color/base_F5F5F5"
            android:background="@drawable/loginbutton"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp">
        <TextView
            android:id="@+id/pay_tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="缴费金额："
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/pay_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="请输入缴费金额"
            android:textSize="15sp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="0dp"
             android:layout_weight="1"
             android:orientation="vertical">
    </LinearLayout>
    <Button
        android:id="@+id/pay_submit"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:background="@drawable/loginbutton"
        android:text="支付"
        android:textSize="18sp"
        android:textColor="@color/base_F5F5F5"
        android:onClick="onClick"
        android:enabled="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="80dp"
        />
</LinearLayout>