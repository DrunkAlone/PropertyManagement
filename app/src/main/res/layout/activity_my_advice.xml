<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@drawable/layer"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorAccent">
        <TextView
            android:id="@+id/myadvice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#F7F7F7"
            android:textStyle="bold"
            android:text="我的建议"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myadvice_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类型："
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/myadvice_tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="操作类型"
            android:textSize="15sp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp">
        <TextView
            android:id="@+id/myadvice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人："
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/myadvice_tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="联系人姓名"
            android:textSize="15sp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myadvice_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话："
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/myadvice_tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="联系电话"
            android:textSize="15sp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <TextView
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/myadvice_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详情描述："
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/myadvice_tv_description"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:hint="详情描述"
        android:gravity="top"
        android:enabled="true"
        android:inputType="textMultiLine"
        android:minLines="8"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        />
    <Button
        android:id="@+id/myadvice_back"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:background="@drawable/loginbutton"
        android:text="返回"
        android:textSize="20sp"
        android:textColor="@color/base_F5F5F5"
        android:onClick="onClick"
        android:enabled="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="80dp"
        />
</LinearLayout>