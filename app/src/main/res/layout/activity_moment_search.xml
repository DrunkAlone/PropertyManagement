<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_height="120dp"
        android:layout_width="match_parent">
        <RelativeLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorAccent">
            <TextView
                android:id="@+id/moment_category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:textColor="#F7F7F7"
                android:textStyle="bold"
                android:text="搜索动态"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp">

            <EditText
                android:id="@+id/moment_search_word"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="输入搜索关键字"
                android:background="@drawable/inputbackground"
                android:textSize="20dp"/>

            <ImageButton
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:paddingTop="3dp"
                android:id="@+id/moment_search_commit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:background="#0000"
                android:clickable="true"
                android:onClick="onClick"
                android:src="@drawable/ic_nick_search"/>

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="@+id/dashboard_nav"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        android:id="@+id/dashboard_list"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <!-- 图像视图-->
        <ListView
            android:divider="@null"
            android:id="@+id/listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>