<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@drawable/layer"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorAccent">
        <TextView
            android:id="@+id/info_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#F7F7F7"
            android:textStyle="bold"
            android:text="发布投票"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/vote_admin_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="投票标题："
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/vote_admin_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入投票标题"
            android:textSize="15sp"
            android:lines="2"
            android:minLines="2"
            android:maxLines="2"
            android:inputType="textMultiLine"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/vote_admin_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入要发布的投票详情内容。"
        android:gravity="top"
        android:enabled="true"
        android:inputType="textMultiLine"
        android:minLines="12"
        android:maxLines="15"
        android:scrollbars="vertical"
        android:background="@drawable/edittext_border"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/vote_admin_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="截止时间："
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/vote_admin_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="年份"
            android:textSize="15sp"
            android:clickable="true"
            android:focusable="false"
            android:onClick="onClick"/>
        <TextView
            android:id="@+id/vote_admin_tv_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/vote_admin_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="月份"
            android:textSize="15sp"
            android:clickable="true"
            android:focusable="false"
            android:onClick="onClick"/>
        <TextView
            android:id="@+id/vote_admin_tv_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:textSize="15sp"
            />
        <EditText
            android:id="@+id/vote_admin_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="日期"
            android:textSize="15sp"
            android:clickable="true"
            android:focusable="false"
            android:onClick="onClick"/>
        <TextView
            android:id="@+id/vote_admin_tv_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日"
            android:textSize="15sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
    </LinearLayout>
    <Button
        android:id="@+id/vote_admin_submit"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:background="@drawable/loginbutton"
        android:text="发布"
        android:textSize="20sp"
        android:textColor="@color/base_F5F5F5"
        android:onClick="onClick"
        android:enabled="true"
        android:layout_marginBottom="50dp"
        android:layout_marginHorizontal="80dp"
        />
</LinearLayout>