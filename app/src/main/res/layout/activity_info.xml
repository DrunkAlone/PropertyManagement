<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/top_bar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorAccent">
        <RelativeLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorAccent">
            <TextView
                android:id="@+id/user_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="25sp"
                android:textColor="#F7F7F7"
                android:textStyle="bold"
                android:text="修改信息"
                />

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#25B6B5B5">
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_title"
                android:text="用户名："
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/info_tv_username"
                android:text="用户名"
                android:layout_marginRight="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/info_tv_pwd"
                    android:text="密    码："
                    android:layout_marginLeft="30dp"
                    android:layout_marginVertical="10dp"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/info_et_pwd"
                android:inputType="textPassword"
                android:layout_marginRight="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入密码"/>
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_tv_repassword"
                android:text="确    认："
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/info_et_repwd"
                android:inputType="textPassword"
                android:layout_marginVertical="10dp"
                android:layout_marginRight="30dp"
                android:textSize="20dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请再次输入密码"/>
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_tv_name"
                android:text="姓    名："
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/info_et_name"
                android:layout_marginRight="30dp"
                android:layout_marginVertical="10dp"
                android:background="@null"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入姓名"/>
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_tv_phone"
                android:text="手机号："
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/info_et_phone"
                android:inputType="phone"
                android:layout_marginRight="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入手机号"/>
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_tv_age"
                android:text="年    龄："
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/info_et_age"
                android:inputType="number"
                android:layout_marginRight="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入年龄"/>
        </LinearLayout>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_tv_gender"
                android:text="性    别："
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="30dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioGroup
                android:orientation="horizontal"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2.6"
                android:layout_marginVertical="10dp"
                android:id="@+id/register_sexRadio">
                <RadioButton
                    android:id="@+id/info_rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:textColor="#386583"
                    android:textSize="20dp"
                    android:text="女"/>

                <RadioButton
                    android:id="@+id/info_rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textColor="#386583"
                    android:textSize="20dp"
                    android:text="男" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/info_l1"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_tv_roomNo"
                android:text="房间号："
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/info_et_roomNo"
                android:inputType="number"
                android:layout_marginRight="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入房号"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/info_l2"
            android:background="#FFFFFF"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/info_tv_license"
                android:text="车牌号："
                android:layout_marginLeft="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/info_et_license"
                android:layout_marginRight="30dp"
                android:layout_marginVertical="10dp"
                android:textSize="20dp"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入车牌号"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
        </LinearLayout>
        <Button
            android:id="@+id/info_back"
            android:text="返回"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:onClick="onClick"
            android:enabled="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/loginbutton"/>
        <Button
            android:id="@+id/info_update"
            android:text="修改"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_marginBottom="50dp"
            android:onClick="onClick"
            android:enabled="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/loginbutton"/>
    </LinearLayout>
</LinearLayout>