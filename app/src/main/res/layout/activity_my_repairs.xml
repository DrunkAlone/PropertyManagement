<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@drawable/layer"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorAccent">
        <TextView
            android:id="@+id/info_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="20sp"
            android:textColor="#F7F7F7"
            android:textStyle="bold"
            android:text="我的报修"
            />
    </RelativeLayout>
<!--    <TextView-->
<!--        android:id="@+id/myrepairs_title"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="我的报修"-->
<!--        android:textAlignment="center"-->
<!--        android:textSize="25sp"-->
<!--        android:layout_marginTop="50dp"-->
<!--        android:layout_gravity="center"-->
<!--        />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myrepairs_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修编号："
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/myrepairs_tv_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="报修编号"
            android:textSize="15sp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp">
        <TextView
            android:id="@+id/myrepairs_tv_project_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修名称："
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/myrepairs_et_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="在线报修类别"
            android:textSize="15sp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myrepairs_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报修日期："
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/myrepairs_et_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请选择报修日期"
            android:textSize="15sp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myrepairs_tv_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房间号："
            android:textSize="15sp"
            />
        <TextView

            android:id="@+id/myrepairs_et_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="报修房间号"
            android:textSize="15sp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myrepairs_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系人："
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/myrepairs_et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="联系人姓名"
            android:textSize="15sp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myrepairs_tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话："
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/myrepairs_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="联系人手机号"
            android:textSize="15sp"
            android:layout_marginRight="50dp"/>
    </LinearLayout>
    <TextView
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/myrepairs_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="详情描述："
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/myrepairs_description"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:hint="报修详情描述"
        android:gravity="top"
        android:enabled="true"
        android:inputType="textMultiLine"
        android:minLines="8"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="40dp"
        />
    <Button
        android:id="@+id/myrepairs_back"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="40dp"
        android:background="@drawable/loginbutton"
        android:text="返回"
        android:textSize="20sp"
        android:textColor="@color/base_F5F5F5"
        android:onClick="onClick"
        android:enabled="true"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="80dp"
        />
</LinearLayout>