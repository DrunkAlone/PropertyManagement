<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@drawable/layer"
    android:orientation="vertical">

    <Button
        android:layout_marginTop="20dp"
        android:background="@drawable/loginbutton"
        android:textColor="@color/base_F5F5F5"
        android:id="@+id/main_chat"
        android:layout_width="200dp"
        android:layout_height="@dimen/adaptive_50dp"
        android:text="聊天"
        android:onClick="onClick"
        android:enabled="true"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/main_info"
        style="@style/em_login_btn"
        android:background="@drawable/loginbutton"
        android:textColor="@color/base_F5F5F5"
        android:layout_width="200dp"
        android:layout_height="@dimen/adaptive_50dp"
        android:enabled="true"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:text="个人" />

    <Button
        android:id="@+id/main_repairs"
        android:layout_width="200dp"
        android:layout_height="@dimen/adaptive_50dp"
        android:text="报修"
        android:onClick="onClick"
        android:enabled="true"
        style="@style/em_login_btn"
        android:background="@drawable/loginbutton"
        android:textColor="@color/base_F5F5F5"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/main_myrepairs"
        android:layout_width="200dp"
        android:layout_height="@dimen/adaptive_50dp"
        android:text="我的报修"
        android:onClick="onClick"
        android:enabled="true"
        style="@style/em_login_btn"
        android:background="@drawable/loginbutton"
        android:textColor="@color/base_F5F5F5"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/main_forum"
        android:layout_width="200dp"
        android:layout_height="@dimen/adaptive_50dp"
        android:text="社区论坛"
        android:onClick="onClick"
        android:enabled="true"
        style="@style/em_login_btn"
        android:background="@drawable/loginbutton"
        android:textColor="@color/base_F5F5F5"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/main_logout"
        android:layout_width="200dp"
        android:layout_height="@dimen/adaptive_50dp"
        android:text="退出登录"
        android:onClick="onClick"
        android:enabled="true"
        style="@style/em_login_btn"
        android:background="@drawable/loginbutton"
        android:textColor="@color/base_F5F5F5"
        android:layout_gravity="center"/>
</LinearLayout>